<mvc:View xmlns:layout="sap.ui.layout" controllerName="project1007.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:t="sap.ui.table">
    <Page id="page" title="{i18n>title}">
        <VBox >
            <Text text="{test>/name/firstName} {test>/name/lastName}"/>   
            <Text text="{test>/datas/2/tel}"/>
			<Button text="변경" press="Onclick"/>
        </VBox>

        <t:Table
			rows="{test>/datas}"
			selectionMode="MultiToggle"
			paste="onPaste"
			ariaLabelledBy="title">
			<t:extension>
				<OverflowToolbar style="Clear">
					<Title id="title" text="Products"/>
				</OverflowToolbar>
			</t:extension>
			<t:columns>
				<t:Column width="11rem">
					<Label text="Name" />
					<t:template>
						<Text text="{test>name}" wrapping="false" />
					</t:template>
				</t:Column>

                <t:Column width="11rem">
					<Label text="Age" />
					<t:template>
						<Text text="{test>age}" wrapping="false" />
					</t:template>
				</t:Column>

                <t:Column width="11rem">
					<Label text="Tel" />
					<t:template>
						<Text text="{test>tel}" wrapping="false" />
					</t:template>
				</t:Column>
			</t:columns>
		</t:Table>
    </Page>
</mvc:View>
