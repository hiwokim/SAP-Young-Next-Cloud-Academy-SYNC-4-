<mvc:View controllerName="project1008.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:m="sap.m"
    xmlns="sap.ui.table"
    xmlns:core="sap.ui.core">
    <m:Page id="page" title="{i18n>title}">
        <m:content>
        	<Table 
				id="TableBasic"
				rows="{/list}"
				selectionMode="MultiToggle"
				rowActionCount="1"
				paste="onPaste"
				ariaLabelledBy="title">
				<rowActionTemplate>
					<RowAction>
						<items>
							<RowActionItem type="Delete" press="onRowDelete" />
						</items>
					</RowAction>
				</rowActionTemplate>
				<extension>
					<m:OverflowToolbar>
                        <m:content>
                            <m:Title text="Products" level="H2"/>
                            <m:ToolbarSpacer />
							<m:Button 
								text="Add" 
								press="onAdd" 
								type="Emphasized" 
								icon="sap-icon://add"/>
							<m:Button 
								text="Delete" 
								press="onDelete" 
								type="Emphasized" 
								icon="sap-icon://delete"/>
                        </m:content>
                	</m:OverflowToolbar>
				</extension>	
				<columns>
					<Column hAlign="End">
						<m:Label width="100%" textAlign="Center" text="이름" />
						<template>
							<m:Input value="{name}" />
						</template>
					</Column>
					<Column hAlign="End">
						<m:Label width="100%" textAlign="Center" text="나이" />
						<template>
							<m:Input value="{age}"/>
						</template>
					</Column>
				</columns>
			</Table>
        </m:content>
    </m:Page>
</mvc:View>
