<mvc:View controllerName="odata.project1009.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}" showNavButton="true" navButtonPress="onNavBack">
        <f:Form id="idForm" editable="true">
                <f:title>
                    <core:Title text="Order Detail" />
                </f:title>
                <f:layout>
                    <f:ColumnLayout
                        columnsM="2"
                        columnsL="3"
                        columnsXL="4"/>
                </f:layout>
                <f:formContainers>
                    <f:FormContainer title="Group 1">
                        <f:formElements>
                            <f:FormElement label="OrderID">
                                <f:fields>
                                    <Text text="{OrderID}"/>    
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="CustomerID">
                                <f:fields>
                                    <Text text="{CustomerID}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="EmployeeID">
                                <f:fields>
                                    <Text text="{EmployeeID}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="OrderDate">
                                <f:fields>
                                    <Text text="{OrderDate}"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form> 
    </Page>
</mvc:View>
