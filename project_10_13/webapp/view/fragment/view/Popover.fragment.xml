<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="myPopover"
		title="{Name}"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Bottom"
		initialFocus="email">
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					id="email"
					text="Email"
					press="handleEmailPress" />
			</OverflowToolbar>
		</footer>
        <VBox class="sapUiSmallMargin">
            <Label text="Product Number:"/>
            <Input value="hihi"/>
        </VBox>
		<Image src="{ProductPicUrl}" width="15em" densityAware="false" />
	</Popover>
</core:FragmentDefinition>
