<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="sync.projectcust.controller.View1">
    <Page title="{i18n>title}">
        <content>
            <VBox>
                <Table id="customerTable" inset="false">
                    <headerToolbar>
                        <Toolbar>
                            <HBox alignItems="Center" justifyContent="Start" fitContainer="true" >
                                <Text text="조회조건 : " class="sapUiTinyMarginEnd"/>
                                <Button text="전체" type="Emphasized" press=".onAllFilter" class="sapUiTinyMarginEnd"/>
                                <Button text="수입처" type="Emphasized" press=".onImportVendorFilter" class="sapUiTinyMarginEnd"/>
                                <Button text="국내처" type="Emphasized" press=".onDomesticVendorFilter" class="sapUiTinyMarginEnd"/>
                                <Button text="고객사" type="Emphasized" press=".onCustomerFilter"/>
                            </HBox>
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column hAlign="Center">
                            <Text text="이미지" />
                        </Column>
                        <Column hAlign="Center">
                            <Text text="고객 ID"/>
                        </Column>
                        <Column hAlign="Center">
                            <Text text="고객명"/>
                        </Column>
                        <Column hAlign="Center">
                            <Text text="평점"/>
                        </Column>
                        <Column hAlign="Center">
                            <Text text="사업자등록번호"/>
                        </Column>
                        <Column hAlign="Center">
                            <Text text="전화번호"/>
                        </Column>
                        <Column hAlign="Center" width="380px">
                            <Text text="주소"/>
                        </Column>
                        <Column hAlign="Center">
                            <Text text="위치"/>
                        </Column>
                        <!-- <Column>
                            <Text text="Material Number" class="centeredHeader"/>
                        </Column>
                        <Column>
                            <Text text="Material Name" class="centeredHeader"/>
                        </Column> -->
                    </columns>
                    <items>
                        
                    </items>
                </Table>
            </VBox>
        </content>
    </Page>
</mvc:View>
