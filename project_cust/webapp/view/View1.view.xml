<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="sync.projectcust.controller.View1">
    <Page title="{i18n>title}">
        <content>
            <VBox>
                <HBox alignItems="Center" justifyContent="Start" fitContainer="true" >
                    <Text text="필터 : " class="sapUiTinyMarginEnd"/>
                    <Button text="전체" type="Emphasized" press=".onAllFilter" class="sapUiTinyMarginEnd"/>
                    <Button text="수입처" type="Emphasized" press=".onImportVendorFilter" class="sapUiTinyMarginEnd"/>
                    <Button text="국내처" type="Emphasized" press=".onDomesticVendorFilter" class="sapUiTinyMarginEnd"/>
                    <Button text="고객사" type="Emphasized" press=".onCustomerFilter"/>
                </HBox>
                <Table
                    id="customerTable"
                
                    inset="false">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="Customer List"/>
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column>
                            <Text text="Partner ID"/>
                        </Column>
                        <Column>
                            <Text text="Partner Name"/>
                        </Column>
                        <Column>
                            <Text text="CR Number"/>
                        </Column>
                        <Column>
                            <Text text="Tel Number"/>
                        </Column>
                        <Column>
                            <Text text="Address"/>
                        </Column>
                        <Column>
                            <Text text="Material Number"/>
                        </Column>
                        <Column>
                            <Text text="Material Name"/>
                        </Column>
                        <Column>
                            <Text text="Image"/>
                        </Column>
                        <Column>
                            <Text text="Rating"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{PartnerId}"/>
                                <Text text="{PartnerName}"/>
                                <Text text="{Crnum}"/>
                                <Text text="{Telno}"/>
                                <Text text="{Address}"/>
                                <Text text="{Matnr}"/>
                                <Text text="{Manam}"/>
                                <Image src="{ImageUrl}" width="50px" height="50px"/> <!-- 이미지 필드 추가 -->
                                <RatingIndicator value="{Rating}" iconSize="1rem"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
    </Page>
</mvc:View>
