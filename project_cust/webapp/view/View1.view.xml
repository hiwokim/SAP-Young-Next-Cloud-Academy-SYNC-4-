<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="sync.projectcust.controller.View1">
    <Page title="{i18n>title}">
        <content>
            <VBox>
                <Table id="customerTable" inset="false">
                    <headerToolbar>
                        <Toolbar>
                            <HBox alignItems="Center" justifyContent="Start" fitContainer="true" >
                                <Text text="필터 : " class="sapUiTinyMarginEnd"/>
                                <Button text="전체" type="Emphasized" press=".onAllFilter" class="sapUiTinyMarginEnd"/>
                                <Button text="수입처" type="Emphasized" press=".onImportVendorFilter" class="sapUiTinyMarginEnd"/>
                                <Button text="국내처" type="Emphasized" press=".onDomesticVendorFilter" class="sapUiTinyMarginEnd"/>
                                <Button text="고객사" type="Emphasized" press=".onCustomerFilter"/>
                            </HBox>
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column>
                            <Text text="Image"/>
                        </Column>
                        <Column>
                            <Text text="Partner ID"/>
                        </Column>
                        <Column>
                            <Text text="Partner Name"/>
                        </Column>
                        <Column>
                            <Text text="Rating"/>
                        </Column>
                        <Column>
                            <Text text="CR Number"/>
                        </Column>
                        <Column>
                            <Text text="Tel Number"/>
                        </Column>
                        <Column>
                            <Text text="Address"/>
                        </Column>
                        <Column>
                            <Text text="위치확인"/>
                        </Column>
                        <!-- <Column>
                            <Text text="Material Number"/>
                        </Column>
                        <Column>
                            <Text text="Material Name"/>
                        </Column> -->
                    </columns>
                    <items>

                    </items>
                </Table>
            </VBox>
        </content>
    </Page>
</mvc:View>
