<mvc:View controllerName="sync.projectporead.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:unified="sap.ui.unified"
	xmlns="sap.m">
    <ScrollContainer
		height="100%"
		width="100%"
		vertical="true"
		focusable="true">
        <VBox class="sapUiSmallMargin">
		<HBox alignItems="Center">
            <Text text="검색조건 : " class="sapUiTinyMarginEnd"/>
			<Button text="전체" type="Emphasized" press="onAllButtonClick" class="sapUiTinyMarginEnd" />
            <Button text="생두" type="Emphasized" press="onCoffeeButtonClick" class="sapUiTinyMarginEnd" />
            <Button text="포장재" type="Emphasized" press="onPackagingButtonClick"/>
		</HBox>
		<SinglePlanningCalendar
			id="SPC1"
			class="sapUiSmallMarginTop"
			title="주문 및 납기 일정"
			startDate="{path: '/startDate'}"
			stickyMode="{settings>/stickyMode}"
			appointments="{path: '/appointments'}"
			moreLinkPress="moreLinkPress"
			appointmentSelect="onAppointmentClick"
			>
			<views>
				<SinglePlanningCalendarMonthView key="MonthView" title="Month"/>
			</views>
			<appointments>
				<unified:CalendarAppointment
					title="{title}"
					text="{text}"
					type="{type}"
					icon="{icon}"
					startDate="{startDate}"
					endDate="{endDate}"
					>
				</unified:CalendarAppointment>
			</appointments>
		</SinglePlanningCalendar>
	</VBox>
	</ScrollContainer>
</mvc:View>
